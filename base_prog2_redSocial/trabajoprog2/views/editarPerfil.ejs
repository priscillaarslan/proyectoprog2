<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head') %>

<body>
    <%- include('./partials/header') %>

    <main>
        <section class="center main-content">
        <h1>Editar perfil</h1>
        <form action="/users/modificarPerfil" method="post" enctype="multipart/form-data">
            <% if (locals.errors){ %>
                <h4>
                    <%= locals.errors.message %>
                </h4>
            <% } %>
            <div>
                <label for="Pfp">Foto de perfil</label> <br>
                <img width="50px" src="/img/usuarios/<%= locals.user.foto %>" alt=""> <br>
                <input type="file" name="foto">
            </div>
            <div>
                <label for="fecha">Fecha de naimiento</label>
                <input type="date" name="fecha" value="<%= locals.user.fechaDeNacimiento %>">
            </div>
            <div>
                <label for="dni">DNI</label>
                <input type="text" name="dni" value="<%= locals.user.DNI %>">
            </div>
        
        <button type="submit">Actualizar</button>
    </form>
        </section>
    </main>

    <%- include('./partials/footer') %>

</body>

</html>